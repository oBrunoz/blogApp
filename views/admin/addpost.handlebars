{{#each errors}}

    <div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/post/nova" method="POST" class="form-control">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" class="form-control" required>
            
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control" required>

            <label for="desc">Descrição</label>
            <input type="text" name="desc" class="form-control" required>

            <label for="conteudo">Conteúdo <small>(mínimo 10 caractéres)</small></label>
            <textarea name="conteudo" class="form-control" required></textarea>

            <label for="categorias" class="mt-4">Categoria</label>
            <select name="categorias" style="" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button type="submit" style="float: left; transition: 0.15s;" class="btn btn-success mt-4">Criar postagem</button>
        </form>

    </div>
</div>