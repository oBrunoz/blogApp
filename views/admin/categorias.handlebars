<h2 class="">Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small> <br>
            <small>{{date}}</small> <br>
            <form action="/admin/categorias/delet" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button style="float: right; transition: 0.15s;" type="submit" class="btn btn-danger mt-4 mx-3">Deletar</button>
            </form>
            <a href="/admin/categorias/edit/{{_id}}"><button style="float: right; transition: 0.15s;" class="btn btn-success mt-4">Editar</button></a>
        </div>
    </div>
    

{{else}}

<h4 class="mt-4" style="">Nenhuma categoria registrada!</h4>

{{/each}}