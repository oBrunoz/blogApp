<h1>Editar Postagem:</h1>

<div class="card">
  <div class="card-body">
    <form action="/admin/post/edit" method="post">
        <input type="hidden" name="id" value="{{postagens._id}}">
      <label for="titulo">Título</label>
      <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}" required />

      <label for="slug">Slug</label>
      <input type="text" name="slug" class="form-control" value="{{postagens.slug}}" required />

      <label for="desc">Descrição</label>
      <input type="text" name="desc" class="form-control" value="{{postagens.desc}}" required />

      <label for="conteudo">Conteúdo</label>
      <textarea name="conteudo" class="form-control" required> {{postagens.conteudo}} </textarea>

      <label for="categorias" class="mt-4">Categoria</label>
      <select name="categorias" style="" class="form-select">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>

      <button type="submit" style="float: left; transition: 0.15s;" class="btn btn-success mt-4">Editar postagem</button>
    </form>
  </div>
</div>